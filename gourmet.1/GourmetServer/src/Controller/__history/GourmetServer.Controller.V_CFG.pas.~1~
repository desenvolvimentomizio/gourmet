unit GourmetServer.Controller.V_CFG;

interface

Uses
  System.Json,
  System.SysUtils,
  idHashMessageDigest,
  GourmetServer.Model.DAOGeneric,
  GourmetServer.Controller.IMM,
  GourmetServer.Model.Entity.V_CFG;

function BuscaCodigoCfgmgouCtaDelivery: Integer;
function BuscaCodigoCfgmnfeCfoVenda: Integer;

type
  TAPIError = class
  private
    Ferror: string;
  public
    property error: string read Ferror write Ferror;
  end;

implementation


function BuscaCodigoCfgmgouCtaDelivery: Integer;
var
  FDAO: iDAOGeneric<TV_CFG>;
  vlcfgmgouctadelivery: Integer;
begin
  vlcfgmgouctadelivery := 0;

  FDAO := TDAOGeneric<TV_CFG>.New;

  FDAO.DAO.SQL.where('cfgcodigo=1').&End.Find;

  vlcfgmgouctadelivery := FDAO.DataSet.FieldByName('cfgmgouctadelivery').asinteger;
  result := vlcfgmgouctadelivery;
end;

function BuscaCodigoCfgmnfeCfoVenda: Integer;
var
  FDAO: iDAOGeneric<TV_CFG>;
  vlcfgmgouctadelivery: Integer;
begin
  vlcfgmgouctadelivery := 0;

  FDAO := TDAOGeneric<TV_CFG>.New;

  FDAO.DAO.SQL.where('cfgcodigo=1').&End.Find;

  vlcfgmgouctadelivery := FDAO.DataSet.FieldByName('cfgtoemesinte').asinteger;
  result := vlcfgmgouctadelivery;
end;

end.
