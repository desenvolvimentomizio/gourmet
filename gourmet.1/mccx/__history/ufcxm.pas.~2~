  Data.DB, MemDS, DBAccess, Uni, Vcl.Mask, Vcl.DBCtrls;

type
  Tfcxm = class(TForm)
    pbotoes: TPanel;
    psituacao: TPanel;
    bconfirma: TBitBtn;
    bcancela: TBitBtn;
    plccx: TPanel;
    DScxm: TDataSource;
