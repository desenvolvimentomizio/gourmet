unit MizioUP.Controllers.producao;

interface

uses
  System.SysUtils,
  RESTRequest4D,
  REST.Types,
  System.JSON;

function GravaProducao(Const AIpServer:String; aRegistro:String):TJsonArray;

implementation


function GravaProducao(Const AIpServer:String; aRegistro:String):TJsonArray;
var
  resposta: IResponse;
begin

  resposta := TRequest.New.BaseURL('http://' + AIpServer + ':9191/v1/rmp')
            .ContentType('application/json')
            .AddBody(aRegistro)
            .Post;

  if (resposta.StatusCode <> 200) and (resposta.StatusCode <> 204) then
    raise Exception.Create(resposta.Content);

  result := TJSONObject.ParseJSONValue(TEncoding.ASCII.GetBytes(resposta.Content), 0) as TJSONArray;

end;


end.
