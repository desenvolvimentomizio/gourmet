unit MizioUP.Controllers.produtividade;

interface

uses
  RESTRequest4D,
  DataSet.Serialize,
  MizioUP.Models.produtividade;

implementation



procedure CriarPrecoVenda(AResumoProdutividade: TResumoProdutividade);
begin
  var LResponse := PreparaRequest
    .Resource('/preco-venda/{cod_item}')
    .AddBody(TJson.ObjectToClearJsonString(AResumoProdutividade))
    .Get();

  if LResponse.StatusCode <> 201
  then RaiseException(LResponse, 'Falha ao criar novo preço de venda para o item');
end;



end.
