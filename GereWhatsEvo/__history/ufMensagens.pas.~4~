{$R *.dfm}

procedure TfMensagens.btCancelaClick(Sender: TObject);
begin
if DataSource1.DataSet.State<>dsbrowse then
 DataSource1.DataSet.Cancel;

end;

procedure TfMensagens.btconfimaClick(Sender: TObject);
begin
if DataSource1.DataSet.State<>dsbrowse then
 DataSource1.DataSet.Post;
end;

end.
